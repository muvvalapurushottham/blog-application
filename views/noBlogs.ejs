<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title>My Blogs</title>
    <style>
      body {
        background-color: #f9f9f9;
        font-size: 14px;
      }

      h2 {
        font-weight: 600;
        text-align: center;
        margin-bottom: 30px;
        font-size: 2rem;
      }

      .card {
        transition: transform 0.2s ease-in-out, box-shadow 0.2s;
        border: none;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      }

      .card:hover {
        transform: scale(1.05);
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
      }

      .card-img-top {
        object-fit: cover;
        height: 200px;
        border-top-left-radius: 12px;
        border-top-right-radius: 12px;
      }

      .card-title {
        font-size: 1.2rem;
        font-weight: 500;
      }

      .btn-primary {
        background-color: #007bff;
        border: none;
        padding: 10px;
        font-size: 0.9rem;
        border-radius: 8px;
        transition: background-color 0.3s;
      }

      .btn-primary:hover {
        background-color: #0056b3;
      }

      .text-center h2 {
        font-size: 1.8rem;
        color: #6c757d;
      }

      .text-center .btn-primary {
        font-size: 1rem;
        padding: 12px 20px;
      }

      .row-cols-1 .col,
      .row-cols-sm-2 .col,
      .row-cols-md-3 .col {
        display: flex;
        justify-content: center;
      }

      .container-fluid {
        padding: 20px;
      }
    </style>
  </head>
  <body>
    <%- include('./partials/navbar') %>

    <div class="container-fluid mt-4">
      <% if (blogs.length != 0) { %>
      <h2 class="text-center mb-4">Your Blogs</h2>
      <% } %>

      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
        <% if (locals.user) { %>
        <div class="container text-center mt-5">
          <h2>There are no Blogs</h2>
          <div class="mt-3">
            <a href="/blog/add/new-blog" class="btn btn-primary">Add a Blog</a>
          </div>
        </div>
        <% } else { %>
        <div class="container text-center mt-5">
          <h2>There are no Blogs</h2>
        </div>
        <% } %>
      </div>
    </div>

    <%- include('./partials/script') %>
  </body>
</html>
