<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Blog</title>
    <style>
        .blog-cover-img {
            object-fit: cover;
            width: 100%;
            max-height: 450px;
            border-radius: 5px;
        }

        .author-profile-img, .comment-profile-img {
            border-radius: 50%;
            object-fit: cover;
        }

        .blog-body {
            white-space: pre-wrap;
            font-size: 1.1rem;
            line-height: 1.6;
        }

        .comment-section {
            border-top: 1px solid #ccc;
            padding-top: 20px;
        }

        .comment {
            border-bottom: 1px solid #f0f0f0;
            padding: 10px 0;
        }

        .comment img {
            margin-right: 10px;
        }

        .comment-content {
            font-size: 1rem;
            background: #f9f9f9;
            padding: 10px;
            border-radius: 5px;
        }
    </style>
</head>
<body>
    <%- include('./partials/navbar') %>

    <div class="container mt-5">
        <!-- Blog Title -->
        <h1 class="mb-4"><%= blog.title %></h1>

        <!-- Blog Cover Image -->
        <img src="<%= blog.coverImageUrl %>" class="blog-cover-img mb-4" alt="<%= blog.title %>">

        <!-- Blog Content -->
        <div class="blog-body">
            <%= blog.body %>
        </div>
    </div>

    <!-- Blog Author Section -->
    <div class="container mt-5 d-flex align-items-center">
        <img src="<%= blog.createdBy.profileImageUrl %>" class="author-profile-img me-3" width="60px" height="60px" alt="<%= blog.createdBy.fullName %>">
        <h5 class="mb-0"><%= blog.createdBy.fullName %></h5>
    </div>

    <!-- Comments Section -->
    <div class="container mt-5 comment-section">
        <% if (locals.user) { %>
            <h2>Comments (<%= comments.length %>)</h2>

            <!-- Add Comment Form -->
            <form action="/blog/comment/<%= blog._id %>" method="post" class="mb-4">
                <div class="mb-3">
                    <input type="text" class="form-control" id="content" name="content" placeholder="Please enter your comment">
                </div>
                <button class="btn btn-primary" type="submit">Add Comment</button>
            </form>

            <div class="mt-3">
                <% comments.forEach(comment => { %>
                    <div class="comment d-flex align-items-start mb-3">
                        <img src="<%= comment.createdBy.profileImageUrl %>" class="comment-profile-img" width="45px" height="45px" alt="<%= comment.createdBy.fullName %>">
                        <div class="ms-3">
                            <h6><%= comment.createdBy.fullName %></h6>
                            <p class="comment-content"><%= comment.content %></p>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <p class="text-muted">Login to add comments.</p>
        <% } %>
    </div>

    <%- include('./partials/script') %>
    <%- include('./partials/footer') %>
</body>
</html>
