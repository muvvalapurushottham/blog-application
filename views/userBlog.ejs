<!DOCTYPE html>
<html>
  <head>
    <%- include('./partials/head') %>
    <title>My Blogs</title>
    <style>
      body {
        background-color: #f8f9fa;
        font-size: 14px;
        color: #343a40;
      }

      .blog-cover-img {
        object-fit: cover;
        width: 100%;
        max-width: 800px;
        max-height: 400px;
        border-radius: 5px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin: 0 auto;
        display: block;
      }

      .blog-body {
        white-space: pre-wrap;
        font-size: 1rem;
        line-height: 1.6;
        margin-bottom: 30px;
        background: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.05);
      }

      h1 {
        font-size: 2rem;
        font-weight: 600;
        margin-bottom: 20px;
      }

      h5 {
        font-size: 1.1rem;
        font-weight: 500;
      }

      .form-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.05);
      }

      .mb-3 {
        margin-bottom: 1rem;
      }

      label {
        display: block;
        font-size: 1rem;
        font-weight: 500;
        margin-bottom: 0.5rem;
      }

      input[type="text"],
      input[type="file"],
      textarea {
        width: 100%;
        padding: 10px;
        font-size: 1rem;
        border-radius: 6px;
        border: 1px solid #ced4da;
        background-color: #fff;
        transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
      }

      input[type="text"]:focus,
      input[type="file"]:focus,
      textarea:focus {
        border-color: #80bdff;
        outline: 0;
        box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
      }

      textarea {
        resize: vertical;
        min-height: 150px;
      }

      button {
        padding: 10px 15px;
        font-size: 1rem;
        font-weight: 500;
        border-radius: 6px;
        background-color: #007bff;
        color: white;
        border: none;
        cursor: pointer;
        transition: background-color 0.3s ease-in-out;
      }

      button:hover {
        background-color: #0056b3;
      }

      footer {
        margin-top: 20px;
      }
    </style>
  </head>
  <body>
    <%- include('./partials/navbar') %>

    <div class="container mt-5" id="read-view">
      <h1 class="mb-4"><%= blog.title %></h1>

      <img
        src="<%= blog.coverImageUrl %>"
        class="blog-cover-img mb-4"
        alt="<%= blog.title %>"
      />

      <div class="blog-body"><%= blog.body %></div>

      <button id="updateButton">Update Blog</button>
      <button id="deleteButton" data-id="<%= blog._id %>">Delete Blog</button>
    </div>

    <div class="form-container mt-5" id="edit-view" style="display: none">
      <form
        action="/user/userBlog/<%= blog._id %>"
        method="post"
        enctype="multipart/form-data"
      >
        <div class="mb-3">
          <label for="coverImageUrl">Cover Image</label>
          <input type="file" name="coverImageUrl" id="coverImageUrl" />
        </div>
        <div class="mb-3">
          <label for="title">Title</label>
          <input
            type="text"
            id="title"
            name="title"
            value="<%= blog.title %>"
          />
        </div>
        <div class="mb-3">
          <label for="body">Body</label>
          <textarea id="body" name="body" rows="10" cols="50">
<%= blog.body %></textarea
          >
        </div>
        <button type="submit">Update Blog</button>
        <button type="button" id="cancelBtn">Cancel</button>
      </form>
    </div>

    <footer><%- include('./partials/footer') %></footer>
    <%- include('./partials/script') %>

    <script>
      document
        .getElementById("updateButton")
        .addEventListener("click", function () {
          document.getElementById("read-view").style.display = "none";
          document.getElementById("edit-view").style.display = "block";
        });

      document
        .getElementById("cancelBtn")
        .addEventListener("click", function () {
          document.getElementById("edit-view").style.display = "none";
          document.getElementById("read-view").style.display = "block";
        });

      document
        .getElementById("deleteButton")
        .addEventListener("click", function () {
          const blogId = this.getAttribute("data-id");

          if (confirm("Are you sure you want to delete this blog?")) {
            fetch(`/user/userBlog/${blogId}`, {
              method: "DELETE",
              headers: {
                "Content-Type": "application/json",
              }
            }).then(response => {
              if(response.ok) {
                alert("Blo deleted successfully.");
                window.location.reload();
              } else{
                alert("Error deleting blog.");
              }
            }).catch(error => {
              console.error('Error:', error);
              alert("An error occurred while deleting the blog.");
            })
          }
        });
    </script>
  </body>
</html>
