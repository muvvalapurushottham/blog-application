<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Blog Page</title>
    <style>
      body {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        margin: 0;
        font-family: Arial, sans-serif;
      }

      .main-content {
        flex: 1;
        padding: 20px;
      }

      .comment-section {
        background-color: #f8f9fa;
        padding: 20px;
        border-top: 1px solid #e0e0e0;
      }

      .container {
        max-width: 800px;
        margin: 0 auto;
      }

      .comment-profile-img {
        border-radius: 50%;
        object-fit: cover;
      }

      .comment-content {
        background-color: #f9f9f9;
        padding: 10px;
        border-radius: 5px;
      }

      .form-control {
        border-radius: 5px;
        padding: 10px;
      }

      .btn-primary {
        background-color: #007bff;
        border: none;
      }

      .btn-primary:hover {
        background-color: #0056b3;
      }
    </style>
  </head>
  <body>
    <div class="container comment-section">
      <% if (locals.user) { %>
      <h2>Comments (<%= comments.length %>)</h2>

      <form action="/blog/comment/<%= blog._id %>" method="post" class="mb-4">
        <div class="mb-3">
          <input
            type="text"
            class="form-control"
            id="content"
            name="content"
            placeholder="Please enter your comment"
          />
        </div>
        <button class="btn btn-primary" type="submit">Add Comment</button>
      </form>

      <!-- Comments -->
      <div class="mt-3">
        <% comments.forEach(comment => { %>
        <div class="comment d-flex align-items-start mb-3">
          <img
            src="<%= comment.createdBy.profileImageUrl %>"
            class="comment-profile-img"
            width="45px"
            height="45px"
            alt="<%= comment.createdBy.fullName %>"
          />
          <h5><%= comment %></h5>
          <div class="ms-3">
            <h6><%= comment.createdBy.fullName %></h6>
            <p class="comment-content"><%= comment.content %></p>
          </div>
        </div>
        <% }) %>
      </div>
      <% } else { %>
      <p class="text-muted">Login to add comments.</p>
      <% } %>
    </div>
  </body>
</html>
